{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES2022",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "sourceMap": true,
    "noEmit": false,
    "composite": false,
    "strict": true,
    "jsx": "preserve",
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,
    "outDir": "./dist",
    "rootDir": ".",
    "resolveJsonModule": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "paths": {
      "@root/*": ["./*"],
      "@/*": ["./src/*"],
      "@tests/*": ["./tests/*"]
    },
    "types": []
  },
  "include": ["src/**/**.ts", "tests/**/**.ts"],
  "exclude": ["node_modules"],
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  }
}
